{
  "name": "koatest",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "./node_modules/.bin/nodemon app.js",
    "test": "./node_modules/.bin/mocha -w",
    "cover": "./node_modules/.bin/istanbul cover ./node_modules/.bin/_mocha",
    "standard": "./node_modules/.bin/standard --fix",
    "depolySetup": "./node_modules/.bin/pm2 deploy ecosystem.config.js production setup",
    "depoly": "./node_modules/.bin/pm2 deploy ecosystem.config.js production"
  },
  "dependencies": {
    "co-body": "^4.0.0",
    "co-views": "^2.1.0",
    "global": "^4.3.2",
    "koa": "next",
    "koa-compress": "^1.0.6",
    "koa-logger": "^1.2.0",
    "koa-route": "^2.4.2",
    "koa-router": "^7.2.1",
    "koa-static": "^2.0.0",
    "nodemon": "^1.12.1",
    "pg": "^7.3.0",
    "pm2": "^2.9.3",
    "swig": "^1.3.2"
  },
  "devDependencies": {
    "babel-plugin-transform-runtime": "^6.23.0",
    "istanbul": "^0.4.5",
    "mocha": "^2.4.5",
    "standard": "^10.0.3",
    "supertest": "^0.12.1"
  },
  "nodemonConfig": {
    "ignore": [
      "test/*",
      "docs/*",
      "public/*",
      "node_modules"
    ],
    "delay": "2500"
  },
  "standard": {
    "globals": [
      "describe",
      "before",
      "beforeEach",
      "after",
      "afterEach",
      "it"
    ]
  }
}
