{
  "name": "koa_test",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "./node_modules/.bin/standard --fix && ./node_modules/.bin/nodemon index.js",
    "test": "./node_modules/.bin/mocha -w",
    "cover": "./node_modules/.bin/istanbul cover ./node_modules/.bin/_mocha",
    "standard": "./node_modules/.bin/standard --fix",
    "deploySetup": "./node_modules/.bin/pm2 deploy ecosystem.config.js production setup",
    "deploy": "./node_modules/.bin/pm2 deploy ecosystem.config.js production"
  },
  "dependencies": {
    "bcrypt": "^1.0.3",
    "jsonwebtoken": "^8.1.1",
    "koa": "^2.5.0",
    "koa-bodyparser": "^4.2.0",
    "koa-compress": "^1.0.6",
    "koa-cors": "^0.0.16",
    "koa-helmet": "^3.3.0",
    "koa-jwt": "^3.3.0",
    "koa-logger": "^1.2.0",
    "koa-router": "^7.2.1",
    "koa-static": "^2.0.0",
    "nodemon": "^1.12.1",
    "pg": "^7.3.0",
    "pm2": "^2.9.3"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "istanbul": "^0.4.5",
    "mocha": "^2.4.5",
    "standard": "^10.0.3",
    "supertest": "^0.12.1"
  },
  "nodemonConfig": {
    "ignore": [
      "test/*",
      "docs/*",
      "public/*",
      "node_modules"
